.container
  .row
    .col.s12
      %h2 Log in
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = f.input :email, required: false, autofocus: true, wrapper_html: { class: 's12' }
        = f.input :password, required: false, wrapper_html: { class: 's12' }
        = f.input :remember_me, as: :boolean, wrapper_html: { class: 's12' } if devise_mapping.rememberable?
        = f.button :submit, "Log in", wrapper_html: { class: 's12' }
      = render "devise/shared/links"
